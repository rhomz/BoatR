<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="5dip" android:color="#667690" />
            <gradient  android:angle="-90"  android:startColor="#ff3f86ff" android:endColor="#ff7fc0f0"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <!--<corners android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp"
                     android:topLeftRadius="10dp" android:topRightRadius="10dp" />-->
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#ff7fc0f0" />
            <solid
                android:color="#ff3f86ff" >
            </solid>
            <!--<gradient  android:angle="-90"  android:startColor="#ffcc120f" android:endColor="#ff76191f" />-->
        </shape>
    </item>
