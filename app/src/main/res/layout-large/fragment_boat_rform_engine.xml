<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ph.gov.da.bfar.mynavigationdrawer.BoatRFormEngine">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <LinearLayout
            android:id="@+id/layout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="PARTICULARS OF PROPULSION SYSTEM"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:background="#ff5689ff"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="8dp"
                />

            <TextView
                android:text="ENGINE MAKE :"
                android:id="@+id/tvEngine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
            <Spinner
                android:id="@+id/spinnerEngine"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:layout_height="45dp"
            ></Spinner>
            <TextView
                android:text="SERIAL NUMBER :"
                android:id="@+id/tvSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/etSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                style="@style/customized_textfield"                />
            <TextView
                android:text="HORSE POWER :"
                android:id="@+id/tvHorsePower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
            <Spinner
                android:id="@+id/spinnerHorsePower"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:layout_height="45dp"></Spinner>
            <Button
                android:text="Add Another"
                android:id="@+id/btnAddNew"
                android:textSize="@dimen/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login_rounded_view"
                style="@style/button_text" android:padding="10dp"/>

            <TextView
                android:text="ENGINE MAKE:"
                android:id="@+id/tvEngine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
            <Spinner
                android:id="@+id/spinnerEngine2"
                android:layout_width="match_parent"
                android:background="@android:drawable/btn_dropdown"
                android:layout_height="45dp"
                android:visibility="gone"></Spinner>
            <TextView
                android:text="SERIAL NUMBER:"
                android:id="@+id/tvSerial2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_top"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/etSerial2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@drawable/edit_text"
                style="@style/customized_textfield"/>
            <TextView
                android:text="HORSE POWER:"
                android:id="@+id/tvHorsePower2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="@dimen/text_size"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginLeft="5dp"/>
            <Spinner
                android:id="@+id/spinnerHorsePower2"
                android:layout_width="match_parent"
                android:background="@android:drawable/btn_dropdown"
                android:layout_height="45dp"
                android:visibility="gone"></Spinner>
            <TextView
                android:text="Cancel"
                android:id="@+id/tvCancel"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="#ff0504ff"
                android:textStyle="italic"
                android:layout_marginTop="@dimen/margin_top"/>
            <Button
                android:text="NEXT"
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login_rounded_view"
                style="@style/button_text"
                android:textSize="@dimen/text_size"
                android:layout_marginLeft="500dp"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
