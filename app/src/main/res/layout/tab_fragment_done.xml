<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.da.bfar.apps.boatr.tabFragment.TabFragmentDone">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imgResult"
            android:src="@drawable/icon_cam"
            android:layout_width="400dp"
            android:layout_height="200dp" />
        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/tvPath"
            android:text="PATH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="35dp"
            android:visibility="gone"/>

       <!-- <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageName"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER IMAGE NAME"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />-->

        <TextView
            android:id="@+id/txtPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#ff101c78"
            android:textSize="30dp" />

        <Button
            style="@style/button_text"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:id="@+id/btnTakePicture"
            android:textStyle="bold"
            android:background="@drawable/btn_login_rounded_view"
            android:text="TAKE PICTURE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/signResult"
            android:src="@drawable/write_signature_pgp_application_mimetypes"
            android:layout_width="400dp"
            android:layout_height="200dp" />
        <Button
            style="@style/button_text"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:background="@drawable/btn_login_rounded_view"
            android:id="@+id/btnTakeSignature"
            android:textStyle="bold"
            android:text="TAKE SIGNATURE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            style="@style/button_text"
            android:background="@drawable/btn_login_rounded_view"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:id="@+id/btnUpload"
            android:textStyle="bold"
            android:text="Upload File"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</FrameLayout>
